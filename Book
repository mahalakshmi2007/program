class Books {
    String title;
    String author;

    public Books(String title, String author) {
        this.title = title;
        this.author = author;
    }

    public void display() {
        System.out.println("Title: " + title + " and the author: " + author);
    }

    public static void main(String[] args) {
        Books a = new Books("Kabuliwala", "Rabindranath Tagore");
        a.display();
    }
}
